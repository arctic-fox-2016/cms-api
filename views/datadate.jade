extends layout

block content
  .container
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container-fluid
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Hacktiv8 CMS
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='/home')
                | Home
                span.sr-only (current)
            li
              a(href='/data') Data
            li.active
              a(href='/datadate') Data Date
  .container
    button.btn.btn-primary
      span.glyphicon.glyphicon-plus
      b Add
    .jumbotron#addform
      form.form-inline
        .form-group
          label(for='exampleInputName2') Letter
          input#exampleInputName2.form-control(type='text', placeholder='A', name='letter')
        .form-group
          label(for='exampleInputEmail2') Frequency
          input#exampleInputEmail2.form-control(type='text', placeholder='0.0000', name='frequency')
        button.btn.btn-default(type='submit') Save
    .row
      h3 Search
      hr
      form.form-inline
        .form-group
          label(for='exampleInputName2') Letter
          input#exampleInputName2.form-control(type='date', placeholder='A', name='letter')
        .form-group
          label(for='exampleInputEmail2') Frequency
          input#exampleInputEmail2.form-control(type='number', placeholder='0.0000', name='frequency')
        button.btn.btn-default(type='submit') Save
    .row
      table.table
        caption Optional table caption.
        thead
          tr
            th #
            th Letter
            th Frequency
            th Action
        tbody
          tr
            th(scope='row') 1
            td 2016-10-21
            td 97
            td
              button.btn.btn-success
                span.glyphicon.glyphicon-pencil
                b Update

              button.btn.btn-danger
                span.glyphicon.glyphicon-trash
                b Delete
