extends layout

block content
  include navbar
  .container
    button.btn.btn-primary#btnadd
      span.glyphicon.glyphicon-plus
      b Add
    .jumbotron#addform
      form.form-inline
        .form-group
          label(for='letter') Letter
          &nbsp;
          input#letter.form-control(type='text', placeholder='A', name='letter')
        &nbsp;
        .form-group
          label(for='frequency') Frequency
          &nbsp;
          input#frequency.form-control(type='number', placeholder='0.0000', name='frequency')
        &nbsp;
        button#btnsave.btn.btn-default(type='submit') Save
    .row
      h3 Search
      hr
      form.form-inline
        .form-group
          label(for='lettersearch') Letter
          &nbsp;
          input#lettersearch.form-control(type='text', placeholder='A', name='letter')
        &nbsp;
        .form-group
          label(for='frequencysearch') Frequency
          &nbsp;
          input#frequencysearch.form-control(type='number', placeholder='0.0000', name='frequency')
    .row
      table.table
        caption Optional table caption.
        thead
          tr
            th #
            th Letter
            th Frequency
            th Action
        tbody#datatable
          tr
            th(scope='row') 1
            td B
            td 7
            td
              button.btn.btn-success
                span.glyphicon.glyphicon-pencil
                b Update

              button.btn.btn-danger
                span.glyphicon.glyphicon-trash
                b Delete
  script(type='text/javascript', src='/javascripts/data.js')
