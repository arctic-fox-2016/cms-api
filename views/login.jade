extends layout

block content
  .container
    .row
      .col-md-6.col-md-offset-3
        
        .alert.alert-danger#notification 
          if(msg) 
            p #{msg}
        .panel.panel-login
          .panel-heading
            .row
              .col-xs-6
                a#login-form-link.active(href='#') Login
              .col-xs-6
                a#register-form-link(href='#') Register
            hr
          .panel-body
            .row
              .col-lg-12
                form#login-form(role='form', style='display: block;')
                  .form-group
                    input#email.form-control(type='text', name='email', tabindex='1', placeholder='Username', value='')
                  .form-group
                    input#password.form-control(type='password', name='password', tabindex='2', placeholder='Password')
          
                  .form-group
                    .row
                      .col-sm-6.col-sm-offset-3
                        input#login-submit.form-control.btn.btn-login(type='submit', name='login-submit', tabindex='4', value='Log In')

                form#register-form(role='form', style='display: none;')
                  .form-group
                    input#email-register.form-control(type='email', name='emailregister', tabindex='1', placeholder='Email', value='')                  
                  .form-group
                    input#password-register.form-control(type='password', name='password', tabindex='2', placeholder='Password')
                  .form-group
                    input#confirm-password.form-control(type='password', name='confirm-password', tabindex='2', placeholder='Confirm Password')
                  .form-group
                    .row
                      .col-sm-6.col-sm-offset-3
                        input#register-submit.form-control.btn.btn-register(type='submit', name='register-submit', tabindex='4', value='Register Now')
  script(type='text/javascript', src='/javascripts/validation.js')  
